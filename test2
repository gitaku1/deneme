import os
import nbformat
from nbconvert import HTMLExporter
from weasyprint import HTML

# Dosya yollarÄ±
IPYNB_PATH = "/veri01/ipynbdirectory/notebook.ipynb"
PDF_OUTPUT_PATH = "/veri01/ipynbdirectory/notebook.pdf"

# Daha da geliÅŸmiÅŸ CSS
CUSTOM_CSS = """
<style>
body {
    font-family: "DejaVu Sans", sans-serif;
    font-size: 8pt;
    margin: 0;
    padding: 0;
}
pre, code {
    font-size: 6pt !important;
    white-space: pre-wrap !important;
    word-wrap: break-word;
    overflow: visible !important;
}
.output_area pre, .output_area div {
    white-space: pre-wrap !important;
    word-break: break-word !important;
    overflow-x: visible !important;
    font-size: 6pt !important;
    max-width: 100% !important;
}
div.output_scroll {
    overflow: visible !important;
    max-height: none !important;
}
.output_wrapper, .output {
    page-break-inside: avoid !important;
}
table {
    width: 100% !important;
    table-layout: fixed !important;
    word-wrap: break-word !important;
    font-size: 6pt !important;
}
td, th {
    padding: 2px !important;
    overflow: hidden !important;
    text-overflow: ellipsis !important;
    word-break: break-word !important;
}
</style>
"""

def convert_ipynb_to_pdf():
    print("ðŸ“˜ Notebook okunuyor...")
    with open(IPYNB_PATH, "r", encoding="utf-8") as f:
        nb = nbformat.read(f, as_version=4)

    print("ðŸ’» HTML'e dÃ¶nÃ¼ÅŸtÃ¼rÃ¼lÃ¼yor...")
    html_exporter = HTMLExporter()
    html_exporter.exclude_input_prompt = True
    html_exporter.exclude_output_prompt = True
    body, _ = html_exporter.from_notebook_node(nb)

    full_html = CUSTOM_CSS + body

    print("ðŸ“„ PDF oluÅŸturuluyor, tÃ¼m Ã§Ä±ktÄ± alanlarÄ± kÃ¼Ã§Ã¼ltÃ¼lmÃ¼ÅŸ ÅŸekilde ekleniyor...")
    HTML(string=full_html).write_pdf(PDF_OUTPUT_PATH)
    print(f"âœ… PDF oluÅŸturuldu: {PDF_OUTPUT_PATH}")

convert_ipynb_to_pdf()
