# Row group sayısını öğrenmek için metadata
ROW_GROUPS=$(hadoop jar parquet-tools-1.10.99.7.1.9.16-2.jar meta hdfs://namenode:8020/user/data/your_file.parquet \
             | grep "row group" | wc -l)

echo "Row group sayısı: $ROW_GROUPS"

# Sadece ilk N row group’u hızlıca kontrol et
for i in $(seq 0 49); do
    hadoop jar parquet-tools-1.10.99.7.1.9.16-2.jar meta hdfs://namenode:8020/user/data/your_file.parquet --row-group $i \
        2>/dev/null | head -n 20
done
