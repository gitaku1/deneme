# Yazdırma için gelişmiş CSS (kolon sayısından bağımsız şekilde tabloyu ölçekler)
custom_css = """
<style>
body {
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;
    font-size: 11px;
    -webkit-print-color-adjust: exact;
}

@media print {
    html, body {
        width: 100%;
        overflow: visible;
    }

    /* Kod hücreleri ve çıktı */
    .input, .output, pre, code {
        white-space: pre-wrap !important;
        word-break: break-word !important;
        font-size: 9px !important;
        overflow-x: auto !important;
    }

    /* Çıktı alanı ölçeklensin */
    .output_area {
        transform: scale(0.75);
        transform-origin: top left;
        width: 130%; /* geniş içerikler için ölçek öncesi genişlik */
        max-width: none !important;
    }

    /* Tablolar için sabit genişlik ve küçük yazı */
    table {
        width: 100% !important;
        table-layout: fixed;
        font-size: 8.5px;
        border-collapse: collapse;
        overflow-wrap: break-word;
        word-wrap: break-word;
    }

    th, td {
        padding: 2px 4px;
        border: 1px solid #999;
        word-break: break-word;
    }

    .container, .cell {
        margin: 0 !important;
        padding: 0 !important;
    }

    .cell {
        page-break-inside: avoid;
    }
}
</style>
"""

# CSS'i <head> içine enjekte et
if "</head>" in html_data:
    html_data = html_data.replace("</head>", f"{custom_css}</head>")
else:
    html_data = custom_css + html_data
