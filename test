/* Sayfa düzeni için */
@page {
    size: A4;             /* Sayfa boyutu A4 */
    margin: 1cm;          /* Kenar boşlukları */
}

/* İçerik alanı */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background: #fff;
    width: 100%;  /* Genişliği %100 yaparak sayfayı kullanmaya çalışın */
}

/* Sayfa başlarına ve sonlarına boşluk ekleyin */
.container {
    margin-bottom: 50px;
}

/* İçeriği düzgün kırmak için */
h1, h2, h3, p {
    page-break-inside: avoid; /* Başlıkların sayfa içinde kesilmesini engeller */
}
