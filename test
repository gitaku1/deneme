from nbconvert import HTMLExporter
import nbformat

# Notebook dosyasını yükleyin
with open("notebook_adi.ipynb", "r") as f:
    nb_content = f.read()

# Notebook içeriğini HTML formatına dönüştürün
nb_node = nbformat.reads(nb_content, as_version=4)
html_exporter = HTMLExporter()

# HTML çıktısını al
html_data, resources = html_exporter.from_notebook_node(nb_node)

# Yazdırmaya uygun CSS'i HTML'e ekle
custom_css = """
<style>
body {
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;
    font-size: 12px;
    -webkit-print-color-adjust: exact;
}
@media print {
    html, body {
        width: 100%;
        overflow: visible;
    }
    .input, .output, pre {
        white-space: pre-wrap !important;
        word-break: break-word !important;
        font-size: 10px !important;
        overflow-x: auto !important;
    }
    .output_area {
        max-width: 100% !important;
    }
    table {
        width: 100% !important;
        table-layout: auto;
        word-break: break-word;
        font-size: 10px;
    }
    .container, .cell {
        margin: 0 !important;
        padding: 0 !important;
    }
    .cell {
        page-break-inside: avoid;
    }
}
</style>
"""

# CSS'i <head> içine enjekte et
if "</head>" in html_data:
    html_data = html_data.replace("</head>", f"{custom_css}</head>")
else:
    html_data = custom_css + html_data

# HTML dosyasını kaydedin
with open("notebook.html", "w") as f:
    f.write(html_data)
